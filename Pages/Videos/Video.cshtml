@page
@model M05_UF3_P2_Template.Pages.Videos.VideoModel
@{

if (Model.Id > 0)
    {
        ViewData["Title"] = "Video - " + Model.video.Duration;
    }
    else
    {
        ViewData["Title"] = "Video - Create";
    }
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">
                @if (Model.Id > 0)
                {
                   // <img class="img img-thumbnail img-fluid" src="@Model.video.Icon" style="width: 200px; height: 100px; object-fit: scale-down; background-color:@Model.company.IconBackground;" />
                    <span>@Model.video.Duration - <small>Edit Duration</small></span>
                }
                else
                {
                    <span>Create Duration</span>
                }
                <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
            </h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="Company_Id_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">tag</span>Id</label>
                    @{
                        string CustomId = Model.Id > 0 ? Model.Id.ToString() : null;
                    }
                    <input type="text" asp-for="video.Id" value="@CustomId" readonly class="form-control" id="Company_Id_Input" placeholder="-">
                </div>
                <div class="form-group col-md-5">
                    <label for="Company_Name_Input col-sm-2 col-form-label"><span  style="font-size: 1rem;"></span>Duration</label>
                    <input type="text" asp-for="video.Duration" maxlength="50" class="form-control" id="Video_Duration_Input" placeholder="Duration">
                </div>
                
            </div>
        </div>
    </div>
</form>