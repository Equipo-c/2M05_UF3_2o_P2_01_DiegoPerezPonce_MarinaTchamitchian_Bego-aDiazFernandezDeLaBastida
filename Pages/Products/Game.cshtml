@page
@model M05_UF3_P2_Template.Pages.Products.GameModel
@{
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Company - " + Model.Product.Game.Id;
    }
    else
    {
        ViewData["Title"] = "Company - Create";
    }
}


@if (Model.Id > 0)
{
    ViewData["Title"] = "Game - Edit";
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">
                @if (Model.Id > 0)
                {
                    <span>Edit Game</span>
                }
                else
                {
                    <span>Create Game</span>
                }
                <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
            </h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-2">
                    @{
                        string CustomId = Model.Id > 0 ? Model.Id.ToString() : null;
                    }
                    <input type="text" asp-for="Product.Game.Id" value="@CustomId" readonly class="form-control" id="Company_Id_Input" placeholder="-">
                </div>
                <div class="form-group col-md-5">
                    <label for="Product_Summary_Input col-sm-2 col-form-label"><span style="font-size: 1rem;"></span>Summary</label>
                    <input type="text" asp-for="product.Summary" maxlength="50" class="form-control" id="Product_Summary_Input" placeholder="Summary">
                </div>
                <div class="form-group col-md-5">
                    <label for="Product_Icon_Input col-sm-2 col-form-label"><span style="font-size: 1rem;"></span>Icon</label>
                    <input type="url" asp-for="product.Icon" maxlength="1000" class="form-control" id="Product_Icon_Input" placeholder="Inserte url">
                </div>
            </div>
            <div class="form-group">
                <label for="Product_Banner_Input col-sm-2 col-form-label"><span style="font-size: 1rem;"></span>Banner</label>
                <input type="url" asp-for="product.Banner" maxlength="2048" class="form-control" id="Product_Banner_Input" placeholder="Inserte url">
            </div>

        </div>
    </div>
</form>
