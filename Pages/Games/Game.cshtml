@page
@model M05_UF3_P2_Template.Pages.Games.GameModel 
 
@{

    if (Model.Id > 0)
    {
         ViewData["Title"] = "Game- " + Model.game.Version;
      
    }
    else
    {
        ViewData["Title"] = "Game - Create";
    }
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">
                @if (Model.Id > 0)
                {
                    //<img class="img img-thumbnail img-fluid" src="@Model.game.Icon" style="width: 200px; height: 100px; object-fit: scale-down; background-color:@Model.game.IconBackground;" />
                    <span>@Model.game.Version - <small>Edit Game</small></span>
                }
                else
                {
                    <span>Create game</span>
                }
                <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
            </h1>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="Company_Id_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">tag</span>Id</label>
                    @{
                        string CustomId = Model.Id > 0 ? Model.Id.ToString() : null;
                    }
                    <input type="text" asp-for="game.Id" value="@CustomId" readonly class="form-control" id="Game_Id_Input" placeholder="-">
                </div>
                <div class="form-group col-md-5">
                    <label for="Game_Version_Input col-sm-2 col-form-label"><span  style="font-size: 1rem;"></span>Version</label>
                    <input type="text" asp-for="game.Version" maxlength="50" class="form-control" id="Game_Version_Input" placeholder="Version">
                </div>
                <div class="form-group col-md-5">
                    <label for="Game_Rating_Input col-sm-2 col-form-label"><span  style="font-size: 1rem;"></span>Rating</label>
                    <input type="text" asp-for="game.Rating" maxlength="50" class="form-control" id="Game_Rating_Input" placeholder="YXXXXXXXXX">
                </div>
            </div>
           
        </div>
    </div>
</form>